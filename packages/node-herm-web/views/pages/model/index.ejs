<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
    <title>Node Herm|Models</title>
</head>

<body class='container'>
    <header>
        <%- include('../../partials/header') %>
    </header>

    <div class="d-flex mt-5">

        <div class="flex-fill">
            <%- include('../../partials/side-data', data) %>
        </div>

        <div class="ml-4" style="width: 70%;">

            <div class="d-flex">
                <h2 class="flex-fill">Models</h2>

                <a class="btn btn-link mr-4" href="/model/add">Add</a>
                <a class="btn btn-link" href="/generate">Generate Code</a>
            </div>

            <div class="d-flex flex-wrap" style="justify-content: space-evenly;">

                <% 
                    let models = [];
                    if (data) {
                        models = data.models;
                    }
                    models.forEach(model => { 
                %>
                <div class="card" style="width: 18rem;margin-top: 1rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= model.name %></h5>
                        <a href="#" class="card-link">Edit</a>

                        <h6 class="card-subtitle mt-4">Properties</h6>
                    </div>

                    <ul class="list-group list-group-flush mb-4">

                        <% model.properties.forEach(property => { %>
                        <li class="list-group-item d-flex justify-content-between">
                            <div><%= property.name %></div>

                            <div class="text-capitalize text-right">
                                <%= property.type %>
                            </div>
                        </li>
                        <% }) %>

                    </ul>
                </div>
                <% }) %>

            </div>

        </div>

    </div>

    <%- include('../../partials/scripts') %>
</body>

</html>